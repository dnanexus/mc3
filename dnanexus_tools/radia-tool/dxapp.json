{
  "name": "radia-tool",
  "title": "radia",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "dnaTumor",
      "label": "Tumor DNA BAM",
      "help": "Tumor DNA BAM",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "dnaNormal",
      "label": "Normal DNA BAM",
      "help": "Normal DNA BAM",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "rnaNormal",
      "label": "Normal RNA BAM",
      "help": "Normal RNA BAM",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": true
    },
    {
      "name": "rnaTumor",
      "label": "Tumor RNA BAM",
      "help": "Tumor RNA BAM",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": true
    },
    {
      "name": "fasta",
      "label": "Reference genome",
      "help": "Reference genome used to align BAMs",
      "class": "file",
      "patterns": ["*.fa.gz"]
    }
  ],
  "outputSpec": [
    {
      "name": "output_vcf",
      "label": "Radia VCF",
      "help": "Mutations in VCF format",
      "class": "file",
      "patterns": ["*.vcf"]
    },
    {
      "name": "filtered_output_vcf",
      "label": "Filtered Radia VCF",
      "help": "Filtered mutations in VCF format",
      "class": "file",
      "patterns": ["*.vcf"]
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/script.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x8"
      }
    },
    "execDepends": [
      { "name": "samtools" },
      { "name": "tabix" },
      { "name": "pysam", "package_manager": "pip"},
      { "name": "PyVCF", "package_manager": "pip"}
    ]
  },
  "access": {"network": ["*"]}
}

